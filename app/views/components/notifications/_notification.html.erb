<%= stylesheet_link_tag 'notifications.css' %>
  
<% if nf[:notification].status == "unread"%>  
  <div class="notification-unread">
    <%= image_tag get_poster_pic(nf[:post]), class: "notification-profile-pic"%>
      <div class="data">     
        <div class="poster-name">
          <%= link_to nf[:post].job_heading, post_path(nf[:post])%>
        </div>
        <div class="message">
          <%= nf[:notification].message %>
        </div>
      </div>
  </div>
<% else %> 
  <div class="notification-read">
    <%= image_tag get_poster_pic(nf[:post]), class: "notification-profile-pic"%>      
      <div class="data">     
        <div class="poster-name">
          <%= link_to nf[:post].job_heading, post_path(nf[:post])%>
        </div>
        <div class="message">
          <%= nf[:notification].message %>
        </div>
      </div>
  </div>
<% end %>