<%= stylesheet_link_tag 'notifications.css' %>

<div class="notification" onclick="openPopup()">
    <div class="profile-pic"></div>

    <div class="data">
      <div class="poster-name"><%= notification[:post].job_heading %></div>

      <div class="message">
        <%= notification[:notification].first.message%>
      </div>
    </div>
  </div>

<%= javascript_include_tag "popup"%>