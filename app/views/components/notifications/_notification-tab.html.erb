<%= stylesheet_link_tag 'notifications.css' %>

<div class="notification-container">
  <div class="notification-container-heading">Notifications</div>
  <% if get_notification_data().nil? || get_notification_data().empty? %>
    <%= render 'components/notifications/no_notifications' %>
  <% else %>
    <% get_notification_data().each do |notification| %>
      <%= render partial: '/components/notifications/notification', locals: {nf: notification} %>
    <% end %>
  <% end %>
</div>
