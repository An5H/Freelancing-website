<%= stylesheet_link_tag 'notification-modal.css' %>

<div class="popup" id="popup">
    <div class="col-xs-12 pad-0 poster-details-notifications-modal">
        <div class="col-xs-2 profile-pic-notifications-modal"></div>

        <div class="col-xs-4 poster-name-notifications-modal"><%= job_poster_details.f_name %> <%= job_poster_details.l_name %></div>

        <div class="col-xs-4 posted-date-notifications-modal"><%= get_created_at(post)%></div>
        <div class="col-xs-2"> <img id="drag1" class="notification-modal-cross-icon" onclick="closePopup()" src="<%= asset_path('cross-icon') %>" draggable="true" ondragstart="drag(event)" width="20" height="20"> </div>
    </div>
     <div class="col-xs-12 heading container">
        <div class="job-heading col-xs-6"><%= link_to post.job_heading, "/post/#{post.id}", method: :get, disabled: false %></div>
        <div class="job-heading col-xs-6"><%= post.job_type %></div>
    </div>
    <div class="col-xs-12 description container">
        <%= notification.first.message %>
    </div>
    
    <div class="col-xs-12 pad-0 notifications-button-container">
        <div class="col-xs-6 pad-0">
            <div class="interested">Are you intersted in this candidate?</div>
        </div>

        <div class="col-xs-3">
            <button class="accept-button">Accept</button>
        </div>

        <div class="col-xs-3">
            <button class="reject-button">Reject</button>
        </div>
    </div>
</div>

<%= javascript_include_tag "popup"%>