<%= stylesheet_link_tag 'explore-main.css' %>

<% if user_signed_in? %>
    <%= render '/common/header'%>
    <div class="col-xs-12 content-container">
      <div class="col-xs-3 sidebar-container">
        <%= render '/common/sidebar'%>
      </div>
      <div class="col-xs-6 feed"> 
        <%= render 'components/posts/post-layout'%>
      </div>
      <div class="col-xs-3 notifications">
        <%= render 'components/notifications/notification-tab'%>
      </div>
    </div>
<% else %>
    <div class="forms">
      <%= render "home" %>
    </div>
<% end %>