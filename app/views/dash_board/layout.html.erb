<div class="col-xs-12">
    <div class= "col-xs-3">
        <% if @profile.avatar.attached? %>
            <%= image_tag @profile.avatar.variant(:thumb) %>
        <% else %>
            <%= "No Profile Picture"%>
        <% end %>
    </div>
     <div class= "col-xs-9">
        <%= form_for :@user do |f| %>
            <div class="col-xs-12">
                <div class= "col-xs-4">
                    <%= f.label :name %>
                    <%= @user.f_name + " " + @user.l_name %>
                </div>
                <div class= "col-xs-4">
                    <%= f.label :profession %>
                    <%= @profile.profession %>
                </div>
                <div class= "col-xs-4">
                    <%= f.label :rating %>
                    <%= @profile.rating %>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <%= f.label :total_experience %>
                    <%= @profile.experience %>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <%= f.label :contact_number %>
                    <%= @profile.contact_number %>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <%= f.label :area_of_operation %>
                    <%= @profile.state + ", " + @profile.country %>
                </div>
            </div>
        <% end %>
     </div>
</div>
